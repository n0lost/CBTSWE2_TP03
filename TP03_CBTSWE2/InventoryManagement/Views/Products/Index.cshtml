@model IEnumerable<InventoryManagement.Models.Product>

@{
    ViewData["Title"] = "Produtos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5">Produtos</h1>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Novo Produto
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        Nenhum produto encontrado.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Preço</th>
                    <th>Estoque</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.StockQuantity</td>
                        <td>
                            <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-sm btn-info me-1 text-white" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
